<Window x:Class="ColorChecker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorChecker"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="700">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label x:Name="colorArea" Margin="0" Background="Black"/>

        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <!--ここから追加-->
            <TextBlock Grid.Column="0" Grid.Row="0" Text="R" FontSize="30"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Slider x:Name="rSlider" Grid.Column="1" Grid.Row="0" VerticalAlignment="Center" Maximum="255" ValueChanged="Slider_ValueChanged"/>
            <TextBox x:Name="rValue" Text="{Binding ElementName=rSlider,Path=Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:0}}" Grid.Column="2" Grid.Row="0" FontSize="17"
                     VerticalAlignment="Center" TextAlignment="Right"/>

            <TextBlock Grid.Column="0" Grid.Row="1" Text="G" FontSize="30"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Slider x:Name="gSlider" Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" Maximum="255" ValueChanged="Slider_ValueChanged"/>
            <TextBox x:Name="gValue" Text="{Binding ElementName=gSlider,Path=Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:0}}" Grid.Column="2" Grid.Row="1" FontSize="17"
                     VerticalAlignment="Center" TextAlignment="Right"/>

            <TextBlock Grid.Column="0" Grid.Row="2" Text="B" FontSize="30"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Slider x:Name="bSlider" Grid.Column="1" Grid.Row="2" VerticalAlignment="Center" Maximum="255" ValueChanged="Slider_ValueChanged"/>
            <TextBox x:Name="bValue" Text="{Binding ElementName=bSlider,Path=Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:0}}" Grid.Column="2" Grid.Row="2" FontSize="17"
                     VerticalAlignment="Center" TextAlignment="Right"/>
            <ComboBox x:Name="colorSelectComboBox" ItemsSource="{Binding}" SelectedValue="{Binding Color}" Margin="20,0" Height="24" VerticalContentAlignment="Center" Width="155" Grid.Row="3" Grid.ColumnSpan="3" SelectionChanged="colorSelectComboBox_SelectionChanged">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Border Width="20" Height="Auto" Margin="5,0" BorderThickness="1" BorderBrush="Black"  >
                                <Border.Background>
                                    <SolidColorBrush Color="{Binding Color}"/>
                                </Border.Background>
                            </Border>
                            <TextBlock Text="{Binding Name}"></TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>


        </Grid>
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="5*"/>
            </Grid.RowDefinitions>
            <Button x:Name="stockbutton" Content="保存" HorizontalAlignment="Left" Margin="3,0,0,0" VerticalAlignment="Center" Click="stockbutton_Click" Width="225"/>
            <ListBox Grid.Row="1" ItemsSource="{Binding Path=Color}" x:Name="listBox" FontSize="17" SelectionChanged="listBox_SelectionChanged"/>
            <!--ここから追加-->




        </Grid>

    </Grid>
</Window>
