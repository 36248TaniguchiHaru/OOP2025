<Window x:Class="CustomerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomerApp" SizeToContent="Height"
        mc:Ignorable="d"
        Title="顧客管理" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15*"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="NameBox" Text="名前" FontSize="20" Margin="10,10,10,5"/>
        <TextBox TextWrapping="Wrap" Grid.Row="0" Grid.Column="1" Margin="5,10,10,5" />
        <TextBlock Text="電話番号" FontSize="20" Grid.Row="1" Grid.Column="0" Margin="10,5,5,5" />
        <TextBox x:Name="PhoneNumberBox" TextWrapping="Wrap" Grid.Row="1" Grid.Column="1" Margin="5,5,10,5"/>
        <TextBlock Text="住所" FontSize="20" Grid.Row="2" Grid.Column="0" Margin="10,5,5,5" />
        <TextBox x:Name="AddressBox" TextWrapping="Wrap" Grid.Row="2" Grid.Column="1" Margin="5,5,10,5"/>
        <Image x:Name="Picture" Grid.Row="3" Grid.Column="0" Margin="50,5,5,5" Grid.ColumnSpan="2"/>
        <Button x:Name="AddImageButton" Content="画像追加" Grid.Row="3" Grid.Column="1" Height="30" Width="200" Margin="5,5,10,5" HorizontalAlignment="Right" Click="AddImageButton_Click"/>
        <Button x:Name="SaveButton" Content="保存" Grid.Row="4" Grid.Column="0" Height="30" Width="200" Margin="15,5,5,5" HorizontalAlignment="Left" Background="LightBlue" Grid.ColumnSpan="2" Click="SaveButton_Click"/>
        <Button x:Name="DeleteButton" Content="削除" Grid.Row="4" Grid.Column="1" Height="30" Width="100" Margin="5,5,5,5" HorizontalAlignment="Right" Background="LightPink" Click="DeleteButton_Click"/>
        <Button x:Name="UpdateButton" Content="更新" Grid.Row="4" Grid.Column="1" Height="30" Width="130" Margin="5,5,5,5" HorizontalAlignment="Center" Click="UpdateButton_Click"/>
        <ListView x:Name="PersonListView" Margin="10,10,10,10" Height="500" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2"/>
        

    </Grid>
</Window>
